<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/sber"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nameTextView"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iconImageView"
        app:layout_constraintStart_toEndOf="@id/iconImageView">
    </TextView>

    <TextView
        android:id="@+id/tickerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tickerTextView"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/iconImageView">
    </TextView>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="priceTextView"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iconImageView"
        app:layout_constraintEnd_toStartOf="@id/dollar">
    </TextView>

    <TextView
        android:id="@+id/dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/iconImageView"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <TextView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/priceTextView"
        app:layout_constraintEnd_toStartOf="@id/changeTextView">
    </TextView>

    <TextView
        android:id="@+id/changeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changeTextView"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/priceTextView"
        app:layout_constraintEnd_toStartOf="@id/changeTextViewprocent">
    </TextView>

    <TextView
        android:id="@+id/changeTextViewprocent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/priceTextView"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>